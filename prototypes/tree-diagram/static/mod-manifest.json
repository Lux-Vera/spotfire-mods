{
    "apiVersion": "1.3",
    "version": "1.1",
    "name": "Tree diagram",
    "id": "spotfire-tree-diagram-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name" : "showInfoBox",
            "type" : "boolean",
            "defaultValue" : true
        },
        {
            "name" : "markRootPath",
            "type" : "boolean",
            "defaultValue" : true
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "tooltip": { "enabled": true },
        "axes": [
            {
                "name": "Node",
                "mode": "categorical"
            },
            {
                "name": "Id",
                "mode": "categorical"
            },
            {
                "name": "ParentId",
                "mode": "categorical"
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}