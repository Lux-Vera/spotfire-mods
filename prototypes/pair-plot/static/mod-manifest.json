{
    "apiVersion": "1.3",
    "version": "1.1",
    "name": "Pair-plot",
    "id": "spotfire-pair-plot-prototype-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "Diagonal",
            "type": "string",
            "defaultValue": "measure-names"
        }
    ],
    "dataViewDefinition": {
        "tooltip": { "enabled": true },
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            },
            "automaticConfiguration": { "expressionHeuristics": "none" }
        },
        "axes": [
            {
                "name": "Measures",
                "automaticConfiguration": {
                    "expressionHeuristics": "none"
                },
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "allowNonAggregatingMeasures": true,
                "placement": "bottom"
            },
            {
                "name": "ColumnNames",
                "mode": "categorical",
                "placement": "none",
                "legendItem": { "defaultVisibility": "hidden" },
                "propertyControl": { "visibility": "visible" },
                "automaticConfiguration": { "expressionHeuristics": "none", "priority": 100 }
            },
            {
                "name": "MarkerBy",
                "mode": "categorical",
                "automaticConfiguration": { "expressionHeuristics": "default", "priority": 0 }
            },
            {
                "name": "Count",
                "mode": "continuous",
                "placement": "none",
                "legendItem": { "defaultVisibility": "hidden" },
                "propertyControl": { "visibility": "visible" },
                "automaticConfiguration": { "expressionHeuristics": "none" }
            }
        ]
    },
    "files": ["index.html", "main.css", "bundle.js"]
}
